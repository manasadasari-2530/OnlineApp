             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OnlineApp.MainPage"
             Title="Login"
             xmlns:local="clr-namespace:OnlineApp">

    <ContentPage.BindingContext>
        <local:DataViewModel>

        </local:DataViewModel>
    </ContentPage.BindingContext>

